<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<HBox alignment="TOP_CENTER" prefHeight="364.0" prefWidth="500.0" stylesheets="@css/main.css"
      xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.shinytomato.convox.fxml.MainController">
    <VBox prefHeight="200.0" prefWidth="220.0">
        <HBox.margin>
            <Insets top="10.0"/>
        </HBox.margin>
        <fx:include fx:id="languageListView" maxHeight="330.0" prefWidth="220.0" source="languageList.fxml"/>
    </VBox>
    <VBox alignment="BASELINE_CENTER" maxHeight="340.0" prefWidth="200.0">
        <Label id="selected" fx:id="selected" text="언어를 선택해 주십시오">
            <VBox.margin>
                <Insets bottom="20.0" top="20.0"/>
            </VBox.margin>
        </Label>

        <Label>
        </Label>

        <VBox alignment="BOTTOM_CENTER" VBox.vgrow="ALWAYS">
            <HBox alignment="CENTER" spacing="25.0">
                <Button fx:id="new" mnemonicParsing="false" onMousePressed="#newButton" text="새로 만들기"/>
                <Button fx:id="open" disable="true" mnemonicParsing="false" onMousePressed="#openButton" text="열기"/>
                <VBox.margin>
                    <Insets/>
                </VBox.margin>
                <padding>
                    <Insets bottom="10.0"/>
                </padding>
            </HBox>
            <Label id="info" disable="true" maxHeight="40.0" maxWidth="200.0" minHeight="40.0" prefHeight="40.0"
                   text="ⓘ 언어 이름을 더블클릭하거나 &#10;ENTER 키를 눌러 열 수 있습니다." wrapText="true">
                <VBox.margin>
                    <Insets/>
                </VBox.margin>
                <padding>
                    <Insets left="20.0"/>
                </padding>
            </Label>
            <VBox.margin>
                <Insets/>
            </VBox.margin>

        </VBox>
        <HBox.margin>
            <Insets left="20.0"/>
        </HBox.margin>
        <padding>
            <Insets bottom="10.0"/>
        </padding>
    </VBox>
</HBox>
